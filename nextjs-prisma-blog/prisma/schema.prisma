// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Autor{
  id Int @id @default(autoincrement())
  nombre String
  obras Obra[]
}

model Obra{
  id Int @id @default(autoincrement())
  titulo String
  autor Autor @relation(fields: [autorId], references: [id])
  autorId Int 
  estreno DateTime
  poster String
  poster_h String
  descripcion String?
}